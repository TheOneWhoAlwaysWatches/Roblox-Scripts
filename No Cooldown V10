-- ⚡ Universal No Cooldown Script (Safe/Optimized)
-- Removes cooldowns by overriding Roblox yield functions without causing server flooding

local RunService = game:GetService("RunService")

-- Safe frame sync
local function instantWait()
    RunService.Heartbeat:Wait() -- syncs once per frame
    return nil
end

-- Hook 'wait'
hookfunction(wait, instantWait)

-- Hook 'task.wait'
hookfunction(task.wait, instantWait)

-- Hook 'task.delay'
hookfunction(task.delay, function(_, callback, ...)
    -- Run instantly instead of waiting
    if typeof(callback) == "function" then
        return callback(...)
    end
end)

-- Hook 'task.defer'
hookfunction(task.defer, function(callback, ...)
    -- Run instantly (no defer)
    if typeof(callback) == "function" then
        return callback(...)
    end
end)

print("[✅] Universal No Cooldown Enabled")
