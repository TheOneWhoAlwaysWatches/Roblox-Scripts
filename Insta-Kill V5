-- ðŸŒŒ Eternal Ultra Insta-Killer v3.1 â€” Full Power, Self-Safe ðŸŒŒ

-- CONFIG
local auraSize = Vector3.new(40, 40, 40) -- Aura expansion
local attackRate = 0 -- Maximum speed (use 0.01 if ping spikes)
local doubleStrike = true -- Fire remotes twice per tick

-- SERVICES
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Workspace = game:GetService("Workspace")

-- STATE
local running = false
local myChar, myHRP

-- HELPERS
local function refreshSelf()
	myChar = LocalPlayer.Character
	myHRP = myChar and myChar:FindFirstChild("HumanoidRootPart")
end

local function getTouchPart(tool)
	local tt = tool and tool:FindFirstChildWhichIsA("TouchTransmitter", true)
	return tt and tt.Parent
end

local function equipAndStrike(tool)
	if myChar and tool.Parent ~= myChar then
		tool.Parent = myChar
	end
	tool:Activate()
	local fightEvent = tool:FindFirstChild("FightEvent")
	if fightEvent then
		fightEvent:FireServer()
		if doubleStrike then fightEvent:FireServer() end
	end
end

-- MAIN LOOP
local function startLoop()
	running = true
	task.spawn(function()
		while running do
			refreshSelf()
			if not myChar or not myHRP then task.wait(0.2) continue end

			for _, tool in ipairs(myChar:GetChildren()) do
				if tool:IsA("Tool") then
					-- Remote spam
					equipAndStrike(tool)

					-- Touch spam
					local touchPart = getTouchPart(tool)
					if touchPart then
						local partsInBox = Workspace:GetPartBoundsInBox(
							touchPart.CFrame,
							touchPart.Size + auraSize
						)
						for _, part in ipairs(partsInBox) do
							-- ðŸ”’ Filter: never hit yourself
							if not myChar:IsAncestorOf(part) then
								local model = part:FindFirstAncestorWhichIsA("Model")
								if model then
									task.spawn(function()
										firetouchinterest(touchPart, part, 1)
										firetouchinterest(touchPart, part, 0)
									end)
								end
							end
						end
					end
				end
			end
			task.wait(attackRate)
		end
	end)
end

-- RESET HANDLERS
LocalPlayer.CharacterAdded:Connect(function(char)
	running = false
	task.wait(0.2)
	local hum = char:WaitForChild("Humanoid", 5)
	if hum then
		hum.Died:Connect(function() running = false end)
	end
	startLoop()
end)

-- INITIAL START
if LocalPlayer.Character then
	startLoop()
end

print("âš¡ FULL POWER Insta-Killer v3.1 Loaded â€” Constant Strike Aura (Self-Safe) âš¡")
