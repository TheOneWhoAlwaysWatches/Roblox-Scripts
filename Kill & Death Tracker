-- ⚡ UNIVERSAL KILL/DEATH TRACKER
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local RunService = game:GetService("RunService")

-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "KillDeathCounter"
ScreenGui.Parent = game.CoreGui

local CounterLabel = Instance.new("TextLabel")
CounterLabel.Size = UDim2.new(0, 200, 0, 50)
CounterLabel.Position = UDim2.new(0.5, -100, 0, 50)
CounterLabel.BackgroundTransparency = 1
CounterLabel.TextColor3 = Color3.fromRGB(200, 0, 255)
CounterLabel.Font = Enum.Font.Code
CounterLabel.TextSize = 20
CounterLabel.Text = "Kills: 0 | Deaths: 0"
CounterLabel.Parent = ScreenGui

local kills, deaths = 0, 0
local lastHitMap = {} -- maps player -> last hitter

local function updateCounter()
    CounterLabel.Text = "Kills: " .. kills .. " | Deaths: " .. deaths
end

-- === Track your own deaths ===
LocalPlayer.CharacterAdded:Connect(function(char)
    local hum = char:WaitForChild("Humanoid")
    hum.Died:Connect(function()
        deaths += 1
        updateCounter()
    end)
end)

-- === Track hits for all players ===
local function hookHumanoid(hum, plr)
    if plr == LocalPlayer then return end
    if not hum then return end

    -- Track damage via Humanoid:GetPropertyChangedSignal("Health")
    hum:GetPropertyChangedSignal("Health"):Connect(function()
        local char = plr.Character
        if not char then return end

        -- Record last hitter as LocalPlayer if in range or tool active
        local myChar = LocalPlayer.Character
        if myChar and myChar:FindFirstChild("HumanoidRootPart") and char:FindFirstChild("HumanoidRootPart") then
            local dist = (myChar.HumanoidRootPart.Position - char.HumanoidRootPart.Position).Magnitude
            if dist <= 100 then -- larger distance to catch remote/aura kills
                lastHitMap[plr] = tick()
            end
        end
    end)

    -- Detect death and attribute kill
    hum.Died:Connect(function()
        if lastHitMap[plr] and tick() - lastHitMap[plr] <= 5 then
            kills += 1
            updateCounter()
        end
        lastHitMap[plr] = nil
    end)
end

-- Hook all current and future players
for _, p in pairs(Players:GetPlayers()) do
    if p.Character and p.Character:FindFirstChild("Humanoid") then
        hookHumanoid(p.Character:FindFirstChild("Humanoid"), p)
    end
    p.CharacterAdded:Connect(function(char)
        local hum = char:WaitForChild("Humanoid")
        hookHumanoid(hum, p)
    end)
end

Players.PlayerAdded:Connect(function(p)
    p.CharacterAdded:Connect(function(char)
        local hum = char:WaitForChild("Humanoid")
        hookHumanoid(hum, p)
    end)
end)

print("✅ Universal Kill & Death Tracker is now fully active")
