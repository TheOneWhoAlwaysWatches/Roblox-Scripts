local tweenInfo = TweenInfo.new(2, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1, true)
local tweenWhite = TweenService:Create(titleLabel, tweenInfo, {TextColor3 = Color3.fromRGB(255, 255, 255)})
local tweenSilver = TweenService:Create(titleLabel, tweenInfo, {TextColor3 = Color3.fromRGB(200, 200, 200)})

local function tweenLoop()
    tweenWhite:Play()
    tweenWhite.Completed:Connect(function()
        tweenSilver:Play()
        tweenSilver.Completed:Connect(tweenLoop)
    end)
end
tweenLoop()

