-- ⚡ Ultimate No Cooldown + Remote Spammer ⚡
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- ✅ Overridden Yielders (max speed)
local function fastWait()
    return RunService.PostSimulation:Wait()
end

hookfunction(wait, fastWait)
hookfunction(task.wait, fastWait)

hookfunction(delay, function(_, func)
    task.spawn(func)
end)

hookfunction(spawn, function(func)
    task.spawn(func)
end)

hookfunction(task.delay, function(_, func)
    task.spawn(func)
end)

hookfunction(task.defer, function(func)
    task.spawn(func)
end)

-- (Optional) Override frame waiters too
hookfunction(RunService.Heartbeat.Wait, fastWait)
hookfunction(RunService.RenderStepped.Wait, fastWait)

-- ✅ Remote Spam Setup
local attackRate = 0.03 -- tweak for ping (lower = faster, higher = safer)
local doubleStrike = true

local myChar
local function refreshChar()
    myChar = LocalPlayer.Character
end

local function spamFightEvents()
    refreshChar()
    if not myChar then return end

    for _, tool in ipairs(myChar:GetChildren()) do
        if tool:IsA("Tool") then
            local fightEvent = tool:FindFirstChild("FightEvent")
            if fightEvent then
                fightEvent:FireServer()
                if doubleStrike then
                    fightEvent:FireServer()
                end
            end
        end
    end
end

-- ✅ Damage Loop
task.spawn(function()
    while true do
        spamFightEvents()
        task.wait(attackRate)
    end
end)

print("⚡ ULTIMATE No Cooldown + FightEvent Remote Spammer Loaded ⚡")
