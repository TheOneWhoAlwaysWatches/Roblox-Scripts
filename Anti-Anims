local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Function to disable LocalScripts inside a Tool
local function disableToolScripts(tool)
    for _, obj in ipairs(tool:GetChildren()) do
        if obj:IsA("LocalScript") then
            obj.Disabled = true
            print("Disabled LocalScript in:", tool.Name)
        end
    end
end

-- Hook tools already in backpack
for _, tool in ipairs(LocalPlayer.Backpack:GetChildren()) do
    if tool:IsA("Tool") then
        disableToolScripts(tool)
    end
end

-- Watch for new tools added to backpack
LocalPlayer.Backpack.ChildAdded:Connect(function(tool)
    if tool:IsA("Tool") then
        disableToolScripts(tool)
    end
end)

-- Watch for tools parented to character (equipped)
LocalPlayer.CharacterAdded:Connect(function(char)
    -- Watch tools equipped
    char.ChildAdded:Connect(function(tool)
        if tool:IsA("Tool") then
            disableToolScripts(tool)
        end
    end)
end)

-- Also cover first spawn
if LocalPlayer.Character then
    LocalPlayer.Character.ChildAdded:Connect(function(tool)
        if tool:IsA("Tool") then
            disableToolScripts(tool)
        end
    end)
end
