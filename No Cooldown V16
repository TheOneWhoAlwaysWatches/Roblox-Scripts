-- ⚡ No Cooldown MAX ⚡

local RunService = game:GetService("RunService")

-- Override wait/task.wait to do *almost no yield*
hookfunction(wait, function()
    -- Minimal yield: allows script to run multiple times per frame
    task.wait(0) -- smallest safe yield Roblox allows
end)

hookfunction(task.wait, function()
    task.wait(0)
end)

-- Override delay to immediate spawn
hookfunction(delay, function(_, func)
    task.spawn(func)
end)

-- Override spawn to immediate spawn
hookfunction(spawn, function(func)
    task.spawn(func)
end)

-- Optional: Loop for maximum speed
task.spawn(function()
    while true do
        RunService.Heartbeat:Wait() -- fastest safe loop in Roblox
    end
end)
