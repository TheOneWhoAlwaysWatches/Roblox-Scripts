-- Script Button Generator
function UpdateButtons()
	ContentArea:ClearAllChildren()
	for _, scriptData in ipairs(Scripts[CurrentPage] or {}) do
		local btn = Instance.new("TextButton", ContentArea)
		btn.Size = UDim2.new(1, -10, 0, 30)
		btn.Position = UDim2.new(0, 5, 0, (#ContentArea:GetChildren() - 1) * 35)
		btn.Text = scriptData.Name
		btn.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
		btn.TextColor3 = Color3.fromRGB(0, 255, 0)
		btn.MouseButton1Click:Connect(scriptData.Func)
	end
end

UpdateButtons()

-- Toggle GUI
ToggleBtn.MouseButton1Click:Connect(function()
	MainFrame.Visible = not MainFrame.Visible
end)
