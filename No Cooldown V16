-- ⚡ No Cooldown MAX FIXED ⚡
local RunService = game:GetService("RunService")
local oldWait = wait
local oldTaskWait = task.wait
local oldDelay = delay
local oldSpawn = spawn

-- Minimal safe yield for general loops
local function noCooldownWait(time)
    if time and time > 0 then
        return oldTaskWait(0) -- override longer waits with smallest safe yield
    else
        return oldTaskWait(0)
    end
end

-- Override wait/task.wait
hookfunction(wait, function(time)
    return noCooldownWait(time)
end)

hookfunction(task.wait, function(time)
    return noCooldownWait(time)
end)

-- Override delay but keep safety
hookfunction(delay, function(time, func)
    if time and time > 0 then
        oldDelay(time, func) -- keep normal behavior for longer delays
    else
        task.spawn(func)
    end
end)

-- Override spawn normally
hookfunction(spawn, function(func)
    task.spawn(func)
end)

-- Optional: fast loop for cooldown bypass
task.spawn(function()
    while true do
        RunService.Heartbeat:Wait() -- frame-perfect loop
    end
end)
