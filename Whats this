local function createTab(name, icon, position)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 80, 0, 25)
    btn.Position = UDim2.new(0, position, 0, 0)
    btn.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    btn.BorderSizePixel = 0
    btn.Text = icon .. " " .. name
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 18
    btn.TextColor3 = Color3.fromRGB(0, 255, 0)
    btn.Parent = MainFrame

    -- Content frame for this tab
    local page = Instance.new("Frame")
    page.Name = name .. "Page"
    page.Size = UDim2.new(1, -280, 1, -26)
    page.Position = UDim2.new(0, 100, 0, 26)
    page.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    page.BorderColor3 = Color3.fromRGB(255, 0, 0)
    page.BorderSizePixel = 2
    page.Visible = false
    page.Parent = MainFrame

    -- Store for switching logic
    tabs[name] = btn
    tabPages[name] = page

    -- Divider line
    local divider = Instance.new("Frame")
    divider.Size = UDim2.new(0, 1, 1, 0)
    divider.Position = UDim2.new(1, 0, 0, 0)
    divider.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    divider.BorderSizePixel = 0
    divider.Parent = btn

    -- Tab click logic
    btn.MouseButton1Click:Connect(function()
        -- Hide current tab
        if currentTab and tabPages[currentTab] then
            tabPages[currentTab].Visible = false
        end
        -- Show new tab
        currentTab = name
        tabPages[name].Visible = true
    end)

    return page
end

local tipsPage = createTab("Tips", "üß†", 110)
