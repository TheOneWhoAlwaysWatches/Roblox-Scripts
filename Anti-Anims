local Players = game:GetService("Players")
local lp = Players.LocalPlayer

-- Kill animation LocalScripts inside a tool (after equipped)
local function nukeAnimScripts(tool)
    for _, obj in ipairs(tool:GetDescendants()) do
        if obj:IsA("LocalScript") then
            -- Optional: only kill if it looks like a combat/anim script
            if obj.Name:lower():find("control") or obj.Name:lower():find("anim") then
                obj.Disabled = true
                -- or fully destroy: obj:Destroy()
                print("Disabled anim script:", obj.Name, "in", tool.Name)
            end
        end
    end
end

-- Apply when tool is equipped
local function onCharAdded(char)
    char.ChildAdded:Connect(function(child)
        if child:IsA("Tool") then
            -- Wait a tiny bit so Roblox applies the "tool hold" first
            task.wait(0.1)
            nukeAnimScripts(child)
        end
    end)
end

-- Hook respawns
lp.CharacterAdded:Connect(onCharAdded)

-- Also run once for current char
if lp.Character then
    onCharAdded(lp.Character)
end
