local userLabel = Instance.new("TextLabel", Sidebar)
userLabel.Size = UDim2.new(1, 0, 0, 50)
userLabel.Position = UDim2.new(0, 0, 0, 0)
userLabel.Text = "User: " .. LocalPlayer.Name
userLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
