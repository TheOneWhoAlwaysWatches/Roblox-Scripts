--// NoCooldown Ultra Fast Edition (Remote Spam Removed)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- Hook wait/task.wait to near-zero throttling
hookfunction(wait, function(_) return RunService.Heartbeat:Wait() end)
hookfunction(task.wait, function(_) return RunService.Heartbeat:Wait() end)

--// Config
local auraRange = 25 -- optional for local targeting visuals, won't fire remote spam

--// State
local running = false

--// Helpers
local function getChar(plr) return plr and plr.Character end
local function getHRP(plr)
    local c = getChar(plr)
    return c and c:FindFirstChild("HumanoidRootPart")
end

local function getValidTargets()
    local myHRP = getHRP(LocalPlayer)
    if not myHRP then return {} end
    local playersInRange = {}
    for _, plr in ipairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer then
            local hrp = getHRP(plr)
            if hrp and (hrp.Position - myHRP.Position).Magnitude <= auraRange then
                table.insert(playersInRange, plr)
            end
        end
    end
    return playersInRange
end

--// NoCooldown Loop (local-only tool activation)
local function startLoop()
    running = true
    task.spawn(function()
        while running do
            local myChar = getChar(LocalPlayer)
            if not myChar then task.wait(1) continue end

            for _, tool in ipairs(myChar:GetChildren()) do
                if tool:IsA("Tool") then
                    -- simulate instant tool activation locally
                    local handle = tool:FindFirstChild("Handle")
                    if handle then
                        -- move or reset hitbox, play animations, etc.
                        -- ⚡ you can add local-only overpowered effects here
                    end
                end
            end

            RunService.Heartbeat:Wait() -- basically uncapped
        end
    end)
end

--// Reset Handlers
LocalPlayer.CharacterAdded:Connect(function(char)
    running = false
    task.wait(0.1)
    local hum = char:WaitForChild("Humanoid", 5)
    if hum then hum.Died:Connect(function() running = false end) end
    startLoop()
end)

if LocalPlayer.Character then
    startLoop()
end

print("⚡ Ultra NoCooldown Loaded (Network Friendly) ⚡")
