-- ⚡ Ultimate Full-Throttle No Cooldown ⚡
local RunService = game:GetService("RunService")

-- ✅ Overridden Yielders (max speed)
local function fastWait()
    return RunService.PostSimulation:Wait()
end

-- Overriding standard wait functions
hookfunction(wait, fastWait)
hookfunction(task.wait, fastWait)

hookfunction(delay, function(_, func)
    task.spawn(func)
end)

hookfunction(spawn, function(func)
    task.spawn(func)
end)

hookfunction(task.delay, function(_, func)
    task.spawn(func)
end)

hookfunction(task.defer, function(func)
    task.spawn(func)
end)

-- Optional frame wait overrides
if RunService.Heartbeat.Wait then
    hookfunction(RunService.Heartbeat.Wait, fastWait)
end
if RunService.RenderStepped.Wait then
    hookfunction(RunService.RenderStepped.Wait, fastWait)
end

-- ✅ Continuous No-Cooldown Loop
task.spawn(function()
    while true do
        task.wait(0) -- constantly yield minimally to max out speed
    end
end)

print("⚡ ULTIMATE FULL-THROTTLE No Cooldown Loaded ⚡")
