-- Scrollable page buttons
local pageNames = {"Main", "Useful Scripts", "Misc Scripts", "Misc Scripts 2", "Updates"}
local pageButtons = {}
for i, name in ipairs(pageNames) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -10, 0, 38)
    btn.Text = name
    btn.BackgroundColor3 = Color3.fromRGB(0,0,0)
    btn.TextColor3 = Color3.fromRGB(255,0,255)
    btn.Font = Enum.Font.SourceSans
    btn.TextSize = 18
    btn.Parent = secondaryFrame
    local uiCorner = Instance.new("UICorner", btn)
    uiCorner.CornerRadius = UDim.new(0.3,0)
    pageButtons[name] = btn
end

-- Page switching logic
local function showPage(name)
    thirdFrame.Visible = false
    updatesFrame.Visible = false
    if name == "Updates" then
        updatesFrame.Visible = true
    else
        thirdFrame.Visible = true
        local pageNumber = {["Main"]=1, ["Useful Scripts"]=2, ["Misc Scripts"]=3, ["Misc Scripts 2"]=4}[name]
        createPageButtons(pageNumber)
    end
end

for name, btn in pairs(pageButtons) do
    btn.MouseButton1Click:Connect(function()
        showPage(name)
    end)
end

-- Default to Updates tab
showPage("Updates")
