-- === Kills & Deaths Counter ===
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local kills = 0
local deaths = 0

-- === UI Setup ===
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "KillsDeathsUI"
ScreenGui.Parent = game.CoreGui
ScreenGui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 40)
frame.Position = UDim2.new(0.5, -100, 0, 20)
frame.BackgroundColor3 = Color3.fromRGB(10, 0, 20)
frame.BackgroundTransparency = 0.2
frame.Parent = ScreenGui

Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 8)
local stroke = Instance.new("UIStroke", frame)
stroke.Color = Color3.fromRGB(180, 0, 255)
stroke.Thickness = 2

local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 1, 0)
label.BackgroundTransparency = 1
label.Font = Enum.Font.Code
label.TextSize = 18
label.TextColor3 = Color3.fromRGB(200, 0, 255)
label.Text = "Kills: 0  |  Deaths: 0"
label.Parent = frame

-- === Death tracking ===
LocalPlayer.CharacterAdded:Connect(function(character)
    deaths += 1
    label.Text = "Kills: " .. kills .. "  |  Deaths: " .. deaths
end)

-- === Kills tracking ===
-- Simple version: listens for your tools hitting other players.
local function hookTool(tool)
    if not tool:IsA("Tool") then return end
    local remote = tool:FindFirstChildWhichIsA("RemoteEvent", true)
    if not remote then return end

    remote.OnClientEvent:Connect(function()
        kills += 1
        label.Text = "Kills: " .. kills .. "  |  Deaths: " .. deaths
    end)
end

LocalPlayer.CharacterAdded:Connect(function(char)
    for _, tool in ipairs(char:GetChildren()) do
        hookTool(tool)
    end

    char.ChildAdded:Connect(function(child)
        hookTool(child)
    end)
end)

-- Also hook tools in Backpack
for _, tool in ipairs(LocalPlayer.Backpack:GetChildren()) do
    hookTool(tool)
end

LocalPlayer.Backpack.ChildAdded:Connect(function(child)
    hookTool(child)
end)
