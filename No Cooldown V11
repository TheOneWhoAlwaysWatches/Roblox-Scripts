-- ⚡ UNIVERSAL NO COOLDOWN PATCHER
local RunService = game:GetService("RunService")

-- Hook legacy wait
hookfunction(wait, function()
    return task.wait(0)
end)

-- Hook task.wait
hookfunction(task.wait, function()
    return RunService.Heartbeat:Wait() -- near-zero yield
end)

-- Hook delay() and spawn()
hookfunction(delay, function(_, f)
    task.defer(f)
end)

hookfunction(spawn, function(f)
    task.defer(f)
end)

-- OPTIONAL: If tools use Debris:AddItem() for cooldown cleanup
local Debris = game:GetService("Debris")
local oldAddItem = Debris.AddItem
Debris.AddItem = function(self, obj, t)
    -- Instantly removes instead of waiting
    return oldAddItem(self, obj, 0)
end

print("⚡ Universal NoCooldown Patch Applied")
