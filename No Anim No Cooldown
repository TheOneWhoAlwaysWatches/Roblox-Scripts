local RunService = game:GetService("RunService")

-- Obtiene el evento PostSimulation
local PostSimulationEvent = RunService.PostSimulation

-- Hook de la funci√≥n wait
local originalWait
originalWait = hookfunction(wait, function(duration)
    -- Reemplaza cualquier llamada a wait() con PostSimulation:Wait()
    return PostSimulationEvent:Wait()
end)
